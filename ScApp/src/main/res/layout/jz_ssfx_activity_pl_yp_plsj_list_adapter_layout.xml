<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0.5dp"
        android:layout_weight="1"
        android:background="@color/app_white_color_ffffff"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="威廉希尔"
        android:textColor="@color/app_text_color_666666"
        android:textSize="12dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0.5dp"
        android:layout_weight="2"
        android:background="@color/app_white_color_ffffff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_cspk_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.78"
            android:textColor="@color/app_text_color_666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_cspk_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="一球/球半"
            android:textColor="@color/app_text_color_666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_cspk_3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1.78"
            android:textColor="@color/app_text_color_666666"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/app_white_color_ffffff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_jspk_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.78↑"
            android:textColor="@color/app_text_color_666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_jspk_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="一球/球半"
            android:textColor="@color/app_text_color_666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/jz_ssfx_activity_pl_yp_plsj_list_jspk_3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1.78↓"
            android:textColor="@color/app_text_color_666666"
            android:textSize="12dp" />
    </RelativeLayout>
</LinearLayout>
