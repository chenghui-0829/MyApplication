<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white_color_ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ssfx_activity_pl_sf_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="胜负"
            android:textColor="@color/app_text_color_333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ssfx_activity_pl_rf_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="让分"
            android:textColor="@color/app_text_color_999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ssfx_activity_pl_dxf_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="大小分"
            android:textColor="@color/app_text_color_999999"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line_color_e6e6e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="公司"
            android:textColor="@color/app_text_color_999999"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/ssfx_activity_pl_sf_list_title_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="客胜"
            android:textColor="@color/app_text_color_999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ssfx_activity_pl_sf_list_title_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="让球"
            android:textColor="@color/app_text_color_999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ssfx_activity_pl_sf_list_title_3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主胜"
            android:textColor="@color/app_text_color_999999"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line_color_e6e6e6" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/ssfx_activity_pl_sf_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"></ListView>

        <ListView
            android:id="@+id/ssfx_activity_pl_rf_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="gone"></ListView>

        <ListView
            android:id="@+id/ssfx_activity_pl_dxf_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="gone"></ListView>
    </FrameLayout>

</LinearLayout>
