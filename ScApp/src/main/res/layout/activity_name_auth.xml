<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color_f7f7f7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.shrxc.sc.app.mine.NameAuthActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_title_bg">

        <ImageView
            android:id="@+id/name_auth_activity_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@mipmap/app_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="实名认证"
            android:textColor="@color/app_white_color_ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/app_whilte_circle_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="真实姓名"
            android:textColor="@color/app_text_color_666666"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/name_auth_activity_name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_transparent_color"
            android:hint="请输入您的真实姓名"
            android:maxLength="10"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/app_text_color_a5a5a5"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/app_whilte_circle_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="身份证号"
            android:textColor="@color/app_text_color_666666"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/name_auth_activity_sfzh_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_transparent_color"
            android:digits="@string/edit_only_can_input"
            android:hint="请输入有效身份证号"
            android:maxLength="20"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/app_text_color_a5a5a5"
            android:textSize="14dp" />
    </LinearLayout>


    <Button
        android:id="@+id/name_auth_activity_sq_button"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/app_blue_circle_button_bg"
        android:text="提交"
        android:textColor="@color/app_white_color_ffffff"
        android:textSize="15dp" />

</LinearLayout>
