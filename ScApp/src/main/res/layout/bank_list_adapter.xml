<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bank_card_list_adapter_bg_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_whilte_circle_color"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/bank_card_list_adapter_logo_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bank_card_list_adapter_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="中国工商银行"
                    android:textColor="@color/app_text_color_333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/bank_card_list_adapter_bz_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/app_blue_color_4d8cf5"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/bank_card_list_adapter_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/app_text_color_333333"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>