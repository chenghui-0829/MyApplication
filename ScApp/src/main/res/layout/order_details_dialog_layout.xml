<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/app_whilte_circle_color"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textColor="@color/app_text_color_333333"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/app_line_color_e6e6e6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="6dp"
                android:text="玩法"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="6dp"
                android:text="您的选择"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="6dp"
                android:text="赛果"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="6dp"
                android:text="倍数"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_details_dialog_list_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/app_gray_stroke_color"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <ListView
                android:id="@+id/order_details_dialog_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:divider="@color/app_transparent_color"
                android:dividerHeight="0dp"
                android:overScrollMode="never"
                android:scrollbars="none"></ListView>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/app_line_color_e6e6e6" />

            <TextView
                android:id="@+id/order_details_dialog_list_bs_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/order_details_dialog_list_mcn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="竞彩足球，3串1"
            android:textColor="@color/app_text_color_333333"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
