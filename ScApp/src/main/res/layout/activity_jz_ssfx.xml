<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color_f7f7f7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.shrxc.sc.app.dntz.JzSsfxActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/jz_ssfx_activity_top_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:src="@mipmap/app_back_icon" />

                <TextView
                    android:id="@+id/jz_ssfx_activity_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="09-20 20:00 欧罗巴联 第一轮"
                    android:textColor="@color/app_white_color_ffffff"
                    android:textSize="14dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ys_logo_icon" />

                    <TextView
                        android:id="@+id/jz_ssfx_activity_zd_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="莱切斯特"
                        android:textColor="@color/app_white_color_ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/app_white_color_ffffff"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text=":"
                            android:textColor="@color/app_white_color_ffffff"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/app_white_color_ffffff"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="未开始"
                        android:textColor="@color/app_white_color_ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ys_logo_icon" />

                    <TextView
                        android:id="@+id/jz_ssfx_activity_kd_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="莱切斯特"
                        android:textColor="@color/app_white_color_ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_white_color_ffffff">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="@color/app_line_color_e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/jz_ssfx_activity_tj_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="推荐"
                        android:textColor="@color/app_red_color_fa3243"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/app_red_color_fa3243" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_ssfx_activity_fx_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="分析"
                        android:textColor="@color/app_text_color_333333"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/app_red_color_fa3243"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_ssfx_activity_pl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="赔率"
                        android:textColor="@color/app_text_color_333333"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/app_red_color_fa3243"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_ssfx_activity_sk_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="赛况"
                        android:textColor="@color/app_text_color_333333"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/app_red_color_fa3243"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_ssfx_activity_zr_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="阵容"
                        android:textColor="@color/app_text_color_333333"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/app_red_color_fa3243"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <FrameLayout
                android:id="@+id/jz_ssfx_activity_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <include
                    layout="@layout/jz_ssfx_activity_tj_layout"
                    android:visibility="visible" />

                <include
                    layout="@layout/jz_ssfx_activity_fx_layout"
                    android:visibility="gone" />

                <include
                    layout="@layout/jz_ssfx_activity_pl_layout"
                    android:visibility="gone" />

                <include
                    layout="@layout/jz_ssfx_activity_sk_layout"
                    android:visibility="gone" />

                <include
                    layout="@layout/jz_ssfx_activity_zr_layout"
                    android:visibility="gone" />
            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
