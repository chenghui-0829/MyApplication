<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color_f7f7f7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.shrxc.sc.app.dntz.JczqActivity">

    <RelativeLayout
        android:id="@+id/jz_activity_title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_title_bg">

        <ImageView
            android:id="@+id/jz_activity_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/app_back_icon" />

        <TextView
            android:id="@+id/jz_activity_select_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/jz_xl_icon"
            android:gravity="center_vertical"
            android:text="胜平负"
            android:textColor="@color/app_white_color_ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jz_activity_sx_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/jz_sx_icon" />

            <ImageView
                android:id="@+id/jz_activity_more_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/jz_more_icon" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/jz_activity_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white_color_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/app_line_color_e6e6e6" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxEms="6"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="2dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:text="过关方式"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:src="@mipmap/app_yxj_icon" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/app_gray_stroke_circle_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/jz_activity_select_sub_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@mipmap/j_icon" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/app_line_color_e6e6e6" />

                        <EditText
                            android:id="@+id/jz_activity_select_edit"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="1"
                            android:inputType="number"
                            android:maxLength="2"
                            android:text="1"
                            android:textColor="@color/app_text_color_333333"
                            android:textColorHint="@color/app_text_color_333333"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/app_line_color_e6e6e6" />

                        <ImageView
                            android:id="@+id/jz_activity_select_add_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@mipmap/add_icon" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="倍"
                        android:textSize="12dp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/jz_activity_select_ggfs_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white_color_ffffff"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_dg_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="单关" />

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_2_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="2串1" />

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_3_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="3串1" />

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_4_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="4串1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_5_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="5串1" />

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_6_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="6串1" />

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_7_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="7串1" />

                    <TextView
                        android:id="@+id/jz_activity_select_ggfs_8_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_gray_color_e6e6e6"
                        android:gravity="center"
                        android:text="8串1" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white_color_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/app_line_color_e6e6e6" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/jz_activity_sure_text"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/jz_clear_order_icon"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="清空"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/jz_activity_select_num_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="请至少选择2场比赛"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/jz_activity_sure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_red_circle_3_button_bg"
                    android:paddingBottom="6dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="6dp"
                    android:text="选好了"
                    android:textColor="@color/app_white_color_ffffff"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/jz_activity_bottom_layout">

            <ExpandableListView
                android:id="@+id/jz_activity_spf_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jz_activity_rqspf_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jz_activity_hhgg_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jz_activity_bf_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jz_activity_jqs_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jz_activity_bqc_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jz_activity_dgtz_elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>
        </FrameLayout>

        <View
            android:id="@+id/jz_activity_tm_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22000000"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
